            <!--&lt;!&ndash;指定trans方法需要事务支持 propagation="REQUIRED" 用于insert/update/delete&ndash;&gt;-->
            <!--<tx:method name="trans" propagation="REQUIRED"/>-->
            <!--&lt;!&ndash;propagation="SUPPORTS" 有无事务都执行,适用于selete&ndash;&gt;-->
            <!--<tx:method name="*" propagation="SUPPORTS" read-only="true"></tx:method>-->
        <!--</tx:attributes>-->
    <!--</tx:advice>-->
    <!--&lt;!&ndash;定义事务执行层面,通常是service层&ndash;&gt;-->
    <!--<aop:config>-->
        <!--&lt;!&ndash;advice-ref="interceptor"将定义规则引用到指定层面&ndash;&gt;-->
        <!--<aop:advisor advice-ref="interceptor" pointcut="execution(* cn.itcast.service.impl.*.*(..))"></aop:advisor>-->
    <!--</aop:config>-->
</beans>